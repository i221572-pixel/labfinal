pipeline {
    agent any

    environment {
        VENV = 'venv'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                python3 -m venv $VENV
                . $VENV/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh '''
                . $VENV/bin/activate
                pytest --junitxml=reports/test-results.xml
                '''
            }
        }
    }

    post {
        always {
            junit 'reports/test-results.xml'
        }
        success {
            echo 'Flask app tests passed'
        }
        failure {
            echo 'Flask app tests failed'
        }
    }
}
